<a href="/posts/{{this.slug}}" class="card{{#if this.image}} has-img{{/if}}">
  {{#if this.image}}
    <img src="{{this.image}}" alt="{{this.title}}" class="img-fluid card-img"></img>
  {{/if}}
  <div class="body">
    <h4 class="medium">{{this.title}}</h4>
    {{#if this.subtitle}}
      <p class="gray-text marg-bot-05">
        {{this.subtitle}}
      </p>
    {{/if}}
    {{#if this.topics}}
      <div>
        {{#each this.topics}}
          <span class="topic">{{this}}</span>
        {{/each}}
      </div>
    {{/if}}
  </div>
</a>
