<div>
  {{#if topic}}
    <h4 class="title">Posts about "{{topic}}"</h4>
  {{/if}}
  <div class="card-columns wide">
    {{#each posts}}
      {{> postPreview this}}
    {{/each}}
  </div>
  {{#if topic}}
    <a href="/posts" class="btn btn-primary marg-top-1">
      &larr; Back to all posts
    </a>
  {{else}}
    <a href="/" class="btn btn-primary marg-top-1">
      &larr; Back to home
    </a>
  {{/if}}
</div>
